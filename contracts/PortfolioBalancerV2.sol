interface LendingPoolAddressesProvider {
    function getLendingPool() external view returns (address);
}

interface LendingPool {
    function deposit(
        address _reserve,
        uint256 _amount,
        address _onBehalfOf,
        uint16 _referralCode
    ) external payable;
}

contract PortfolioBalancerV2 is ReentrancyGuard, Ownable {
    using SafeMath for uint256;

    bool private stopped = false;

    address internal wethAddress; // = 0xd0A1E359811322d97991E03f863a0C30C2cF029C;
    address internal usdcAddress; // 0xe22da380ee6B445bb8273C81944ADEB6E8450422;
    address internal aaveAddressProvider;

    IUniswapV2Router02 public uniswapV2Router = IUniswapV2Router02(
        0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
    );

    constructor(address _wethAddress, address _usdcAddress, address _aaveAddressProvider) public {
       wethAddress =  _wethAddress;
       usdcAddress = _usdcAddress;
       aaveAddressProvider = _aaveAddressProvider;
    }

    /**
    @notice This function is used to buy different ERC20 token on uniswap exchange
    @param _tokenAddresses adresses of ERC20 tokens
    @param _amountInETHForToken amounts of ETH to pay for token
    @param _amountOutMinToken  minimum amounts of token
     */

    function rebalance(
        address[] memory _tokenAddresses,
        uint256[] memory _amountInETHForToken,
        uint256[] memory _amountOutMinToken

    ) public payable nonReentrant {

        address[] memory path = new address[](2);
        path[0] = wethAddress;
        uint256 totalIn = 0;
        for (uint256 i = 0; i < _amountInETHForToken.length; i++) {
            totalIn = totalIn.add(_amountInETHForToken[i]);
        }

        require(totalIn >= msg.value, "not enoough ETH");
        
        for (uint256 i = 0; i < _tokenAddresses.length; i++) {

            if (_tokenAddresses[i] == usdcAddress) {
                path[1] = _tokenAddresses[i];
                uint256[] memory amountOut = uniswapV2Router.swapExactETHForTokens{ value: _amountInETHForToken[i] }(
                _amountOutMinToken[i],
                path,
                address(this),
                now + 180);
                // Deposit USDC into AAve
                // retrieve LendingPool address
                LendingPoolAddressesProvider provider = LendingPoolAddressesProvider(aaveAddressProvider);
                
                LendingPool lendingPool = LendingPool(provider.getLendingPool());

                uint16 referral = 0;

                // Approve LendingPool contract to move your USDC
                IERC20(usdcAddress).approve(
                    address(lendingPool),
                    amountOut[1]
                );

                // Deposit USDC
                lendingPool.deposit(usdcAddress, amountOut[1], msg.sender, referral);
            } else {
                path[1] = _tokenAddresses[i];
                uniswapV2Router.swapExactETHForTokens{ value: _amountInETHForToken[i] }(
                _amountOutMinToken[i],
                path,
                msg.sender,
                now + 180);
            }
            
        }
    }
}
